<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ainullov.kamil.alarmclock">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/alarm_clock"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/alarm_clock"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateAlarmClock"
            android:screenOrientation="portrait" />

        <receiver android:name=".AlarmReceiver" />
        <receiver android:name=".AlarmTaskReceiver" />
        <receiver android:name=".AlarmSpeechToTextReceiver" />

        <service
            android:name=".RingtonePlayingService"
            android:enabled="true" />

        <activity
            android:name=".SpeechToText"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TaskAlarmClock"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CommonAlarmClock"
            android:screenOrientation="portrait" />
    </application>

</manifest>